import QtQuick 2.0

Rectangle {
    id: rectBorder
    width: 100
    height: 62
    color: "#419AF1"

    property string text: ""
    property color textColor: "white"

    Text {
        id: name
        anchors.centerIn: parent
        text: rectBorder.text
        color: rectBorder.textColor
        font.pixelSize: 20
        font.bold: true
    }
}


